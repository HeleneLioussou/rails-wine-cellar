
<div class="navbar-vin">
  <%= link_to cellars_path do %>
  <h1 class="navbar-font">Les caves de Jean L.</h1>
  <% end %>
  <%= link_to vins_path do %>
  <div class="addwine">
  <%=  image_tag "bouteille.png"%>
  </div>
  <% end %>
</div>

<% @user.cellars.each do |c| %>
  <div class="clickable-card">
    <%= link_to cellar_path(c) do %>
      <div class="cave_box_newcellar">
        <div class="cave_box_text">
          <h2 ><%= c.name %></h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class= "newcellar_container">
  <div class = "newcellar_name">
    <%= simple_form_for [@cellar] do |c| %>
      <%= c.input :name, label: "Créez une nouvelle cave" %>
      <%= c.submit "Ajouter", class: "btn btn-secondary btn-sm" %>
    <% end %>
  </div>
</div>


<div class="bas-de-page">
  <p>Réalisé par H.L. en Janvier 2019</p>
</div>
