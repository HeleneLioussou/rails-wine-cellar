<div class="navbar-vin">
  <%= link_to cellars_path do %>
  <h1 class="navbar-font">Les caves de Jean L.</h1>
  <% end %>
  <%= link_to vins_path do %>
  <div class="addwine">
  <%=  image_tag "bouteille.png"%>
  </div>
  <% end %>
</div>

<h1>Marquer comme bue à <%= @cellar.name %></h1>
<p>
  <%= simple_form_for [@cellar, @bouteille] do |b| %>
    <%= b.input :statut, collection: ["bu"]%>
    <%= b.submit "Sortir de la Cave", class: "btn btn-secondary btn-sm" %>
  <% end %>
</p>



<h1>Modifier cette bouteille de la Cave de <%= @cellar.name %></h1>

<p>
  <%= simple_form_for [@cellar, @bouteille] do |b| %>
    <%= b.association :vin, :collection => Vin.all.order(:appellation), :label_method => :complete_denomination, label: 'Appellation', as: :radio_buttons%>
    <%= b.input :millesime %>
    <%= b.submit "Modifier", class: "btn btn-secondary btn-sm" %>
  <% end %>
</p>

<h1>Supprimer cette bouteille de la Cave de <%= @cellar.name %></h1>

  <%= link_to '<i class="far fa-minus-square"></i>'.html_safe, cellar_bouteille_path(params[:id]),
          method: :delete,
          data: { confirm: "Etes-vous sûr de vouloir supprimer cette bouteille ?" }  %>
