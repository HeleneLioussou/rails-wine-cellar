<div class="navbar-vin">
  <%= link_to cellars_path do %>
  <h1 class="navbar-font">Les caves de Jean L.</h1>
  <% end %>
  <%= link_to vins_path do %>
  <div class="addwine">
  <%=  image_tag "bouteille.png"%>
  </div>
  <% end %>
</div>

<h1>Ajoutez une bouteille de vin référencé à votre cave de <%= @cellar.name %></h1>

<p>
      <%= simple_form_for [@cellar, @bouteille] do |b| %>
        <%= b.association :vin, :collection => Vin.all.order(:appellation), :label_method => :complete_denomination, label: 'Appellation', as: :radio_buttons%>
        <%= b.input :millesime %>
        <%= b.submit "Ajouter une bouteille à ma cave", class: "btn btn-secondary btn-sm" %>
      <% end %>
</p>
