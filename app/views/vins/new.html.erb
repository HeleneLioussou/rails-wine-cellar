<div class="navbar-vin">
  <%= link_to cellars_path do %>
  <h1 class="navbar-font">Les caves de Jean L.</h1>
  <% end %>
  <%= link_to vins_path do %>
  <div class="addwine">
  <%=  image_tag "bouteille.png"%>
  </div>
  <% end %>
</div>

<h1>Référencez un nouveau vin</h1>

<p>
      <%= simple_form_for [@vin] do |v| %>
        <%= v.input :categorie %>
        <%= v.input :appellation %>
        <%= v.input :contenance %>
        <%= v.input :couleur %>
        <%= v.input :localite %>
        <%= v.input :domaine %>


        <%= v.submit "Référencer ce vin", class: "btn btn-secondary btn-sm" %>
      <% end %>
</p>
